# MCP Server Environment Configuration - Separated Architecture
# Copy this file to .env and fill in your actual values

# ===== CORE SERVER CONFIGURATION =====
NODE_ENV=production
PORT=3002
LOG_LEVEL=info

# ===== BUSINESS DATABASE (Current Supabase) =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===== MEMORY DATABASE (Neon PostgreSQL - NEW) =====
# Sign up at: https://neon.tech (Free: 0.5GB storage)
# Replace with your actual Neon connection string
NEON_DATABASE_URL=postgresql://user:password@host/database?sslmode=require


# ===== VECTOR DATABASE (Current Pinecone) =====
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=chicken-business-memory

# ===== AI SERVICES =====
# Primary: Gemini API (you already have this)
GEMINI_API_KEY=your_gemini_api_key_here
# Tier 3 Fallback APIs (you already have these!)
OPENROUTER_API_KEY=your_openrouter_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# MCP and additional tokens
MCP_TOKEN=your_mcp_token_here
AI_GATEWAY_API_KEY=your_ai_gateway_api_key_here

# ===== GOOGLE DRIVE BACKUP INTEGRATION (NEW - NEED TO ADD) =====
# Follow Google Drive API setup guide to get these
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_DRIVE_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_DRIVE_FOLDER_ID=your_backup_folder_id

# ===== SEPARATED ARCHITECTURE CONFIGURATION =====
MCP_SEPARATED_ARCHITECTURE=true
MCP_MEMORY_DB_TYPE=neon
MCP_CONTEXT_WINDOW_SIZE=2000000
MCP_MAX_TOKENS_PER_MINUTE=100000
MCP_ENABLE_RATE_LIMITING=true
MCP_ENABLE_CACHING=true
MCP_ENABLE_COMPRESSION=true

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your_jwt_secret_here_use_long_random_string

# ===== PERFORMANCE & CACHING =====
# Redis for caching (current setup)
REDIS_URL=redis://redis:6379

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
MAX_FILE_SIZE=50000000

# ===== SERVER CONFIGURATION =====
# Filesystem Configuration
FILESYSTEM_READONLY=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# Optional: Monitoring
GRAFANA_PASSWORD=your_grafana_password_here

# Optional: SSL Configuration (for production with nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Database Connection Pool
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Optional: WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Optional: AI Model Configuration
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=2048
AI_TIMEOUT=30000

# Optional: Business Intelligence Configuration
MEMORY_RETENTION_DAYS=30
PATTERN_LEARNING_ENABLED=true
VOICE_TRANSCRIPTION_ENABLED=true