# üõ†Ô∏è Development Environment Configuration
# For local development

# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=3002

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://postgres:password@localhost:5432/mcp_development
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your_dev_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_dev_supabase_service_role_key

# === AUTHENTICATION ===
JWT_SECRET=development_jwt_secret_key_32_chars_min
JWT_EXPIRES_IN=7d
MCP_AUTH_TOKEN=development_mcp_token

# === AI SERVICES ===
OPENAI_API_KEY=sk-your-dev-openai-key
GOOGLE_AI_API_KEY=your-dev-google-ai-key
ANTHROPIC_API_KEY=your-dev-anthropic-key

# === CORS CONFIGURATION ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ENABLED=true

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# === MEMORY & CACHING ===
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false
CACHE_TTL=300

# === MONITORING & LOGGING ===
SENTRY_DSN=
LOG_LEVEL=debug

# === FEATURES ===
ENABLE_VOICE_STREAMING=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_BUSINESS_INTELLIGENCE=true
ENABLE_MEMORY_PERSISTENCE=true

# === DEVELOPMENT FLAGS ===
ENABLE_DEBUG_LOGGING=true
ENABLE_HOT_RELOAD=true
DISABLE_AUTH_FOR_TESTING=false